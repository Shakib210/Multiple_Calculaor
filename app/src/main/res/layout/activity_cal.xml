<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#515050"
    android:padding="5dp"
    tools:context="calculator.example.calculator.cal">

    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40sp"
        android:textColor="#EAE5E5"
        android:id="@+id/display"
        />


    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/sum"
            />




    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n4"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n6"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/sub"
            />




    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n7"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n8"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n9"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/mul"
            />




    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/dot"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/n0"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/per"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:id="@+id/div"
            />




    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/eql"
        android:textSize="30sp"
        />

</LinearLayout>