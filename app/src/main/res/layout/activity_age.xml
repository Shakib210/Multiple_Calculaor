<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#6C6C6C"
    android:paddingTop="16dp"
    tools:context=".age">

    <Button
     android:background="@drawable/round"
        android:id="@+id/btnStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="29dp"
        android:width="150dp"
        android:text="Birth Date" />



    <TextView
        android:id="@+id/startDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnStartDate"
        android:layout_alignBottom="@+id/btnStartDate"
        android:layout_toRightOf="@+id/btnStartDate"
        android:layout_toEndOf="@+id/btnStartDate" />

    <Button
        android:background="@drawable/round"
        android:id="@+id/btnEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:width="150dp"
        android:text="Current Date"
        android:layout_below="@+id/btnStartDate"
        android:layout_alignLeft="@+id/btnStartDate"
        android:layout_alignStart="@+id/btnStartDate" />


    <TextView
  android:textSize="20sp"
        android:id="@+id/endDateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/btnEndDate"
        android:layout_alignBottom="@+id/btnEndDate"
        android:layout_alignLeft="@+id/startDateDisplay"
        android:layout_alignStart="@+id/startDateDisplay" />


    <Button
    android:background="@drawable/round"
        android:id="@+id/btnCalculateAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="150dp"
        android:text="Calculate Age"
        android:layout_below="@+id/btnEndDate"
        android:layout_alignLeft="@+id/btnEndDate"
        android:layout_alignStart="@+id/btnEndDate" />


    <TextView
        android:id="@+id/txtResult"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnCalculateAge"
        android:layout_alignStart="@+id/btnCalculateAge" />



    <TextView

        android:id="@+id/txtMonthDay"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text=""
        android:layout_below="@+id/txtResult"
        android:layout_alignLeft="@+id/txtResult"
        android:layout_alignStart="@+id/txtResult" />

    <TextView

        android:id="@+id/txtWeekDays"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text=""
        android:layout_below="@+id/txtMonthDay"
        android:layout_alignLeft="@+id/txtMonthDay"
        android:layout_alignStart="@+id/txtMonthDay" />


    <TextView
        android:id="@+id/txtTotalDays"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text=""
        android:layout_below="@+id/txtWeekDays"
        android:layout_alignLeft="@+id/txtWeekDays"
        android:layout_alignStart="@+id/txtWeekDays" />
</RelativeLayout>